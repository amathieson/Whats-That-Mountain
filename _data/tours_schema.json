{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "location": {
        "type": "object",
        "$comment": "Defines the area that this tour will be available within",
        "properties": {
          "lat": { "type": "number" },
          "lon": { "type": "number" },
          "radius": { "type": "number" }
        },
        "required": ["lat", "lon", "radius"]
      },
      "points": {
        "type": "array",
        "$comment": "The points of interest to show on the tour along with a descriptor, these will be shown in the order of the array.",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "additional_info": { "type": "string" }
          },
          "required": ["id", "additional_info"]
        }
      },
      "metadata": {
        "type": "object",
        "$comment": "All the metadata about the tour.",
        "properties": {
          "title": { "type": "string" },
          "author": { "type": "string" },
          "description": { "type": "string" },
          "images": {
            "type": "array",
            "$comment": "Any images used to augment the display of the tour preview, such as an icon or a small gallery of image, identified via the enums",
            "items": {
              "type": "object",
              "properties": {
                "url": { "type": "string" },
                "alt": { "type": "string" },
                "purpose": {
                  "type": "string",
                  "enum": ["ICON", "GALLERY", "DESCRIPTION"]
                }
              },
              "required": ["url", "alt", "purpose"]
            }
          }
        },
        "required": ["title", "author", "description", "images"]
      }
    },
    "required": ["location", "points", "metadata"]
  }
}
